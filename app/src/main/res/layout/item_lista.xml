<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgCidade"
        android:src="@drawable/logo">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblStatus"
        android:text="Status da conta"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgCidade"
        android:layout_marginStart="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDebitado"
        android:text="Valor debitado"
        android:layout_below="@+id/lblCreditado"
        android:layout_alignStart="@+id/lblStatus"
        android:layout_marginTop="11dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCreditado"
        android:text="Valor dcretidado"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/lblStatus"
        android:layout_alignStart="@+id/lblStatus">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblData"
        android:text="Data do status"
        android:layout_below="@+id/lblDebitado"
        android:layout_alignStart="@+id/lblDebitado"
        android:layout_marginTop="10dp">
    </TextView>
</RelativeLayout>